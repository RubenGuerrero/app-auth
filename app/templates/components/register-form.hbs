<form {{action "register" on="submit"}}>

  {{#if successMessage}}
      <div class="alert alert-success" role="alert">
          User created successfuly!
          <p>
              <strong>Name: </strong> {{successMessage.name}}<br>
              <strong>Username: </strong> {{successMessage.username}}<br>
              <strong>Password: </strong> {{successMessage.password}}
          </p>
      </div>
  {{/if}}

  <div class="form-group">
    <label for="name">Name</label>
    {{input value=name type="text" class="form-control" id="name" placeholder="Name"}}
  </div>

  <div class="form-group">
    <label for="username">Username</label>
    {{input value=username type="text" class="form-control" id="username" placeholder="Username"}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    {{input value=password type="password" class="form-control" id="password" placeholder="Password"}}
  </div>

  <button type="submit" class="btn btn-default">Register</button>

</form>